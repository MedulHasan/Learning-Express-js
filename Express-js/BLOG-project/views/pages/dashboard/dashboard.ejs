
<%- include('../../partials/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2 my-5">
                    <h5>My Recent Posts</h5>
                    <div class="row">
                        <% if(posts.length === 0) { %>
                            <p class="text-center text-muted">There is Nothing to Show</p>
                        <% } else { %>
                            <% for(let post of posts) { %>
                                <div class="card col-sm-3 m-2">
                                    <% if(post.thumbnail) { %>
                                        <img class="card-img-top mt-3" src="<%= post.thumbnail %>">
                                    <% } %>
                                    <a href="/explorer/<%= post._id %>" style="color: #222222;">
                                        <p class="my-2"><%= post.title %></p>
                                </div>
                            <% } %>  
                        <% } %>
                    </div>
                </div>
            </div>
             
            <div class="row">
                <div class="col-md-8 offset-md-2">
                <h5>My Recent Bookmarks</h5>
                    <div class="row">
                        <% if(bookmarks.length === 0) { %>
                            <p class="text-center text-muted">There is Nothing to Show</p>
                        <% } else { %>
                            <% for(let post of bookmarks) { %>
                                <div class="card col-sm-3 m-2">
                                    <% if(post.thumbnail) { %>
                                        <img class="card-img-top mt-3" src="<%= post.thumbnail %>">
                                    <% } %>
                                    <a href="/explorer/<%= post._id %>" style="color: #222222;">
                                        <p class="my-2"><%= post.title %></p>
                                </div>
                            <% } %>  
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bd-example-modal-lg" id="crop-modal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Reset Your Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cropped-image"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-cropping">Cancel</button>
                    <button type="button" class="btn btn-primary" id="upload-image">Upload</button>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>